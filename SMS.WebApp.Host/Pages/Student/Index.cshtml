@page
@model SMS.WebApp.Host.Pages.Student.IndexModel
@{
}
<div class="container">
    <a class="btn btn-success" asp-page="/Student/Create" role="button">Create Student</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Gender</th>
                <th scope="col">D.O.B.</th>
                <th scope="col">Grade Level</th>
                <th scope="col">Phone Number</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Students.Count > 0)
            {
                @foreach (var item in Model.Students)
                {
                    <tr>
                        <td class="hidden">@item.StudentId</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Gender</td>
                        <td>@item.DOB</td>
                        <td>@item.GradeLevel</td>
                        <td>@item.PhoneNumber</td>
                        <td>
                            <a asp-page="/Student/Update" asp-route-id="@item.StudentId" role="button">
                                <i class="fa-solid fa-pencil"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <p>No data.</p>
            }
        </tbody>
    </table>
</div>